<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="FlowLayout">
        <attr name="lineGravity" format="enum|reference">

            <enum name="left" value="0"/>
            <enum name="center_horizontal" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="maxLines" format="integer|reference"/>
    </declare-styleable>

    <declare-styleable name="FlowLayout_Layout">
        <attr name="gravityInLine" format="enum|reference">
            <enum value="0" name="top"/>
            <enum value="1" name="center_vertical"/>
            <enum value="2" name="bottom"/>
        </attr>
    </declare-styleable>
</resources>