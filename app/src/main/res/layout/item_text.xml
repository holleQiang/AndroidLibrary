<?xml version="1.0" encoding="utf-8"?>
<com.zq.widget.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.zq.view.recyclerview.item.HorizontalSlidLayout
        android:id="@+id/m_horizontal_slid"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/view_center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/click_selector"
            app:location="center">

            <TextView
                android:id="@+id/textView"
                android:layout_width="1000dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#fff" />


        </RelativeLayout>

        <TextView
            android:id="@+id/right_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#00ff00"
            android:text="@string/appbar_scrolling_view_behavior"
            app:location="right" />

        <TextView
            android:id="@+id/left_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#ff0000"
            android:text="@string/appbar_scrolling_view_behavior"
            app:location="left" />
    </com.zq.view.recyclerview.item.HorizontalSlidLayout>


</com.zq.widget.SquareFrameLayout>