<?xml version="1.0" encoding="utf-8"?>
<com.zq.widget.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



        <com.zq.view.recyclerview.item.HorizontalSlidLayout
            android:id="@+id/m_horizontal_slid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/view_center"
                android:layout_width="match_parent"
                app:location="center"
                android:background="@drawable/click_selector"
                android:layout_height="match_parent">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="1000dp"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="#fff"
                        android:padding="10dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
                </HorizontalScrollView>



            </RelativeLayout>

            <TextView
                android:id="@+id/right_view"
                android:layout_width="wrap_content"
                app:location="right"
                android:background="#00ff00"
                android:text="@string/appbar_scrolling_view_behavior"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/left_view"
                android:layout_width="wrap_content"
                app:location="left"
                android:background="#ff0000"
                android:text="@string/appbar_scrolling_view_behavior"
                android:layout_height="match_parent" />
        </com.zq.view.recyclerview.item.HorizontalSlidLayout>





</com.zq.widget.SquareFrameLayout>